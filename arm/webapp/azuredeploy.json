{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "environment": {
            "type": "string"
        },
        "siteName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "siteLocation": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Shared",
                "Basic",
                "Standard",
                "Premium"
            ],
            "defaultValue": "Free"
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "0",
                "1",
                "2"
            ],
            "defaultValue": "0"
        },
        "repoUrl": {
            "type": "string"
        },
        "branch": {
            "type": "string",
            "defaultValue": "master"
        },
       "project": {
            "type": "string"
        },
        "sqlConn": {
            "type": "string",
            "defaultValue": "Server=(localdb)\\v11.0;Integrated Security=true;"
        },
        "clientId": {
            "type": "string",
            "defaultValue": "clientId"
        },
        "clientSecret": {
            "type": "string",
            "defaultValue": "clientSecret"
        },
        "secretUri": {
            "type": "string",
            "defaultValue": "clientSecret"
        }
    },
    "variables": {
        "apiSiteName": "[parameters('siteName')]"
    },
    "resources": [
        {
            "apiVersion": "2014-11-01",
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverFarms",
            
            "location": "[parameters('siteLocation')]",
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "sku": "[parameters('sku')]",
                "workerSize": "[parameters('workerSize')]",
                "numberOfWorkers": 1
            }
        },
        {
            "apiVersion": "2015-04-01",
            "name": "[variables('apiSiteName')]",
            "type": "Microsoft.Web/sites",
           "tags": {
                "environment": "[parameters('environment')]"
            },
            "location": "[parameters('siteLocation')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverFarms', parameters('hostingPlanName'))]"
            ],
            "properties": {
                "serverFarmId": "[parameters('hostingPlanName')]"
            },
            "resources": [
                {
                    "apiVersion": "2015-04-01",
                    "name": "appsettings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('apiSiteName'))]"
                    ],
                    "properties": {
                        "PROJECT": "[parameters('project')]",
                        "clientUrl": "[concat('http://', parameters('siteName'), '.azurewebsites.net')]",
                        "ClientId": "[parameters('clientId')]",
                        "ClientSecret": "[parameters('clientSecret')]",
                        "SecretUri": "[parameters('secretUri')]"
                    }
                },
                {
                    "apiVersion": "2015-04-01",
                    "name": "connectionstrings",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('apiSiteName'))]"
                    ],
                    "properties": {
                        "MultiChannelToDoContext": {
                            "value": "[parameters('sqlConn')]",
                            "type": "SQLAzure"
                        },
                        "SchoolContext": {
                            "value": "[parameters('sqlConn')]",
                            "type": "SQLAzure"
                        },
                        "DBContext": {
                            "value": "[parameters('sqlConn')]",
                            "type": "SQLAzure"
                        }
                    }
                },
                {
                    "apiVersion": "2015-04-01",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', variables('apiSiteName'))]",
                        "[resourceId('Microsoft.Web/Sites/config', variables('apiSiteName'), 'appsettings')]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('branch')]",
                        "IsManualIntegration": true
                    }
                }
            ]
        }
    ],
    "outputs": {
        "webSiteAddress": {
            "type": "string",
            "value": "[concat('http://', parameters('siteName'), '.azurewebsites.net')]"
        }
    }
}